<div class="sidebar">
  <ul class="search-form">
    <li><%= render 'search/form' %></li>
  </ul>

  <ul>
    <li><%= link_to 'Home', root_path %></li>
  </ul>
  <ul>
    <li>REVIEWS</li>
    <li><%= link_to 'Recent', movies_recent_path %></li>
    <li><%= link_to 'Top', movies_top_path %></li>
  </ul>
  <ul>
    <li>CATEGORIES</li>
    <li><%= link_to 'Western', category_path(Category.find(8)) %></li>
    <li><%= link_to 'Romance', category_path(Category.find(9)) %></li>
    <li><%= link_to 'Fantasy', category_path(Category.find(7)) %></li>
    <li><%= link_to 'Adventure', category_path(Category.find(6)) %></li>
    <li><%= link_to 'History', category_path(Category.find(5)) %></li>
    <li><%= link_to 'Biography', category_path(Category.find(4)) %></li>
    <li><%= link_to 'Action', category_path(Category.find(3)) %></li>
  </ul>
  <ul class="user-links">
  <% if current_user && current_user.admin? %>
    <li><a href="#"><%= current_user.name %> (admin)</a></li>
  <% elsif current_user && current_user.critic? %>
    <li><a href="#"><%= current_user.name %> (critic)</a></li>
  <% elsif current_user && current_user.user? %>
    <li><a href="#"><%= current_user.username %></a></li>
  <% else %>
    <li><%= link_to 'Sign In', new_user_session_path %></li>
    <li><%= link_to 'Sign Up', new_user_registration_path %></li>
  <% end %>
  <% if current_user %>
    <li><%= link_to 'Log Out', destroy_user_session_path, :method => 'delete' %></li>
  <% end %>
  </ul>
</div>
