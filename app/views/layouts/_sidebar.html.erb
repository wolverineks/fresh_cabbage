<div class="sidebar">
  <ul class="search-form">
    <li><%= render 'search/form' %></li>
  </ul>

  <ul>
    <li><%= link_to 'Home', root_path %></li>
  </ul>
  <ul>
    <li class="sidebar-title">REVIEWS</li>
    <li><%= link_to 'Recent', movies_recent_path %></li>
    <li><%= link_to 'Top', movies_top_path %></li>
  </ul>
  <ul>
    <li>CATEGORIES</li>
    <li>Comedy</li>
    <li>Drama</li>
    <li>Action</li>
    <li>Romance</li>
  </ul>
  <ul class="user-links">
  <% if current_user && current_user.admin? %>
    <li><a href="#"><%= current_user.name %> (admin)</a></li>
  <% elsif current_user && current_user.critic? %>
    <li><a href="#"><%= current_user.name %> (critic)</a></li>
  <% elsif current_user && current_user.user? %>
    <li><a href="#"><%= current_user.username %></a></li>
  <% else %>
    <li><%= link_to 'Sign In', new_user_session_path %></li>
    <li><%= link_to 'Sign Up', new_user_registration_path %></li>
  <% end %>
  <% if current_user %>
    <li><%= link_to 'Log Out', destroy_user_session_path, :method => 'delete' %></li>
  <% end %>
  </ul>
</div>
