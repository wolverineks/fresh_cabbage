<div class="movie-content">
  <section class="poster-show">
    <a href="<%= movie_path(movie) %>">
      <%= image_tag movie.image_url %>
    </a>
  </section>

  <section class="movie-info">
    <ul class="review-average">
      <li class="line"><%= display_critic_rating_average_for movie %> Critic Rating</li>
      <li><%= display_user_rating_average_for movie %> User Rating</li>
    </ul>

    <ul class="movie-summary">
      <li class="title"><%= movie.title %></li>
      <li class="synopsis"><%= movie.synopsis %></li>
    </ul>

    <ul class="movie-data">
      <li class="line rating"><%= movie.mpaa_rating %></li>
      <li class="line"><%= movie.runtime %> minutes</li>
      <li class="line"><%= movie.categories.first.name %></li>
      <% if movie.release_date %>
        <li><%= movie.release_date.strftime("%d %B %Y") %></li>
      <% end %>
    </ul>

    <ul class="movie-links">
      <li>Watch Trailer</li>
      <li>Visit Website</li>
    </ul>
  </section>
</div>
