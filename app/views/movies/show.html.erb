<div class="movie-content">
  <section class="poster-show">
    <%= image_tag @movie.image_url %>
  </section>

  <section class="movie-info">
    <ul class="review-average">
      <li class="line"><%= display_critic_rating_average_for @movie %> Critic Rating</li>
      <li><%= display_user_rating_average_for @movie %></li>
    </ul>

    <ul class="movie-summary">
      <li class="title"><%= @movie.title %></li>
      <li class="synopsis"><%= @movie.synopsis %></li>
    </ul>

    <ul class="movie-data">
      <li class="line rating"><%= @movie.mpaa_rating %></li>
      <li class="line"><%= @movie.runtime %> minutes</li>
      <li class="line"><%= @movie.categories.first.name %></li>
      <li><%= @movie.release_date.strftime("%d %B %Y") %></li>
    </ul>

    <ul class="movie-links">
      <li>Watch Trailer</li>
      <li>Visit Website</li>
    </ul>
  </section>
</div>

<div class="review-content">
  <section class="review critic">
    <h1><%= link_to "CRITIC REVIEWS", [@movie, :reviews] %></h1>
    <% @reviews.each do |review| %>
    <ul>
      <% if review.reviewer.critic? %>
      <li>Author: <%= review.reviewer.username %></li>
      <li><%= link_to truncate(review.body, length: 30), [@movie, review] %></li>
      <%= render partial:'likes/counter', :locals => {:review => review} %>
      <span class='like-counter'>
      <%= link_to "Like", review_likes_path(review), { method: :post, :review_id => review.id, class: "like-link" } %>
      </span><br>
      <% end %>
    </ul>
    <% end %>
  </section>

  <section class="review user">
    <h1><%= link_to "USER REVIEWS", [@movie, :reviews] %></h1>
    <% @reviews.each do |review| %>
    <ul>
      <% if review.reviewer.user? %>
      <li>Author: <%= review.reviewer.username %></li>
      <li><%= link_to truncate(review.body, length: 30), [@movie, review] %></li>
      <%= render partial:'likes/counter', locals: {count: @count} %>
      <span class='like-counter'>
      <%= link_to "Like", review_likes_path(review), { method: :post, :review_id => review.id, class: "like-link" } %>
      </span><br>
      <% end %>
    </ul>
    <% end %>
  </section>
</div>

<div id="rating-form">
  <%= render 'ratings/form' %>
</div>


